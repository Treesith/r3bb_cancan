<h1>Listing workouts</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Label</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @workouts.each do |workout| %>
  <tr>
    <td><%= workout.date %></td>
    <td><%= workout.label %></td>
    <td><%= link_to image_tag("display.gif", {:title => "View Workout Details"}), workout %></td>
    <td><%= link_to image_tag("edit_photo.gif", {:title => "Edit Workout Date/Label"}), edit_workout_path(workout) %></td>
    <td><%= link_to image_tag("delete_photo.gif", {:title => "Delete Workout"}), workout, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Workout', new_workout_path %>
